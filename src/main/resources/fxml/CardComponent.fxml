<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="hr.algebra.theloop.controller.CardController"
           prefWidth="120" prefHeight="160"
           onMouseClicked="#onCardClicked">

    <Rectangle fx:id="cardBackground"
               width="120" height="160"
               arcWidth="10" arcHeight="10"
               styleClass="card-background" />

    <VBox alignment="TOP_CENTER" spacing="4" mouseTransparent="true">

        <Text fx:id="cardNameText" text="Card Name" styleClass="card-name"
              wrappingWidth="110" textAlignment="CENTER" style="-fx-font-size: 13px; -fx-font-weight: bold;" />

        <HBox alignment="CENTER" spacing="5">
            <Text fx:id="dimensionIcon" text="⭐" styleClass="dimension-icon" style="-fx-font-size: 16px;" />
            <Text fx:id="dimensionText" text="STAR" styleClass="dimension-text" style="-fx-font-size: 10px;" />
        </HBox>

        <Text fx:id="descriptionText" text="Card description"
              styleClass="card-description"
              wrappingWidth="105" textAlignment="CENTER" style="-fx-font-size: 11px;" />

        <Text fx:id="originalEraText" text="" styleClass="original-era" style="-fx-font-size: 9px;" />

        <Rectangle fx:id="exhaustedOverlay"
                   width="120" height="160"
                   fill="#00000050"
                   visible="false"
                   mouseTransparent="true" />

    </VBox>

</StackPane>