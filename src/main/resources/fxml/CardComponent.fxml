<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="hr.algebra.theloop.controller.CardController"
           prefWidth="80" prefHeight="110"
           onMouseClicked="#onCardClicked">

    <Rectangle fx:id="cardBackground"
               width="75" height="105"
               arcWidth="8" arcHeight="8"
               styleClass="card-background" />

    <VBox alignment="TOP_CENTER" spacing="2" mouseTransparent="true">

        <Text fx:id="cardNameText" text="Card Name" styleClass="card-name"
              wrappingWidth="70" textAlignment="CENTER" style="-fx-font-size: 8px;" />

        <HBox alignment="CENTER" spacing="3">
            <Text fx:id="dimensionIcon" text="⭐" styleClass="dimension-icon" style="-fx-font-size: 10px;" />
            <Text fx:id="dimensionText" text="STAR" styleClass="dimension-text" style="-fx-font-size: 6px;" />
        </HBox>

        <Text fx:id="descriptionText" text="Card description"
              styleClass="card-description"
              wrappingWidth="65" textAlignment="CENTER" style="-fx-font-size: 7px;" />

        <Text fx:id="originalEraText" text="Dawn of Time" styleClass="original-era" style="-fx-font-size: 6px;" />

        <Rectangle fx:id="exhaustedOverlay"
                   width="75" height="105"
                   fill="#00000080"
                   visible="false"
                   mouseTransparent="true" />

    </VBox>

</StackPane>