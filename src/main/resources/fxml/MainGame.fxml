<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import hr.algebra.theloop.view.CircularBoardView?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="hr.algebra.theloop.controller.MainGameController">

    <top>
        <HBox alignment="CENTER" spacing="30" styleClass="game-status">
            <Label fx:id="turnLabel" text="Turn: 1" styleClass="status-label" />
            <Label fx:id="drFooLocationLabel" text="Dr. Foo @ Dawn of Time" styleClass="status-label" />
            <Label fx:id="cycleLabel" text="Cycle: 1/3" styleClass="status-label" />
            <Label fx:id="missionsLabel" text="Missions: 0/4" styleClass="status-label" />
            <Label fx:id="vortexLabel" text="Vortexes: 0/3" styleClass="status-label" />
        </HBox>
    </top>

    <center>
        <CircularBoardView fx:id="circularBoard" />
    </center>

    <bottom>
        <VBox styleClass="player-area">
            <HBox fx:id="playerHandBox" alignment="CENTER" spacing="15" styleClass="player-hand">
                <fx:include fx:id="card1" source="CardComponent.fxml" />
                <fx:include fx:id="card2" source="CardComponent.fxml" />
                <fx:include fx:id="card3" source="CardComponent.fxml" />
            </HBox>

            <HBox alignment="CENTER" spacing="20" styleClass="player-controls">
                <Label fx:id="playerNameLabel" text="Time Agent Bruno" styleClass="player-name" />
                <Label fx:id="playerLocationLabel" text="@ Dawn of Time" styleClass="player-location" />
                <Button fx:id="endTurnButton" text="End Turn" onAction="#endTurn" />
                <Button fx:id="loopButton" text="LOOP" onAction="#performLoop" />
            </HBox>
        </VBox>
    </bottom>

    <right>
        <VBox spacing="10" styleClass="side-panel" prefWidth="150">
            <Label text="Active Missions" styleClass="panel-title" />
            <ListView fx:id="missionsList" prefHeight="200" />

            <Separator />

            <Button text="Save Game" onAction="#saveGame" />
            <Button text="Load Game" onAction="#loadGame" />
            <Button text="New Game" onAction="#newGame" />
        </VBox>
    </right>

</BorderPane>