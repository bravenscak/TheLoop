<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import hr.algebra.theloop.view.CircularBoardView?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="hr.algebra.theloop.controller.MainGameController"
            prefWidth="750" prefHeight="750">

    <!-- COMPACT TOP STATUS BAR -->
    <top>
        <HBox alignment="CENTER" spacing="15" styleClass="game-status" prefHeight="35">
            <Label fx:id="turnLabel" text="Turn: 1" styleClass="status-label" style="-fx-font-size: 10px;" />
            <Label fx:id="drFooLocationLabel" text="Dr. Foo @ Dawn" styleClass="status-label" style="-fx-font-size: 10px;" />
            <Label fx:id="cycleLabel" text="Cycle: 1/3" styleClass="status-label" style="-fx-font-size: 10px;" />
            <Label fx:id="missionsLabel" text="Missions: 0/4" styleClass="status-label" style="-fx-font-size: 10px;" />
            <Label fx:id="vortexLabel" text="Vortex: 0/4" styleClass="status-label" style="-fx-font-size: 10px;" />
        </HBox>
    </top>

    <!-- MAIN GAME BOARD -->
    <center>
        <CircularBoardView fx:id="circularBoard" />
    </center>

    <!-- COMPACT BOTTOM PLAYER AREA -->
    <bottom>
        <VBox styleClass="player-area" prefHeight="200">
            <!-- SMALLER CARD HAND -->
            <HBox fx:id="playerHandBox" alignment="CENTER" spacing="8" styleClass="player-hand" prefHeight="120">
                <fx:include fx:id="card1" source="CardComponent.fxml" />
                <fx:include fx:id="card2" source="CardComponent.fxml" />
                <fx:include fx:id="card3" source="CardComponent.fxml" />
            </HBox>

            <!-- COMPACT PLAYER CONTROLS -->
            <HBox alignment="CENTER" spacing="10" styleClass="player-controls" prefHeight="40">
                <Label fx:id="playerNameLabel" text="Bruno" styleClass="player-name" style="-fx-font-size: 12px;" />
                <Label fx:id="playerLocationLabel" text="@ Dawn" styleClass="player-location" style="-fx-font-size: 10px;" />
                <Button fx:id="endTurnButton" text="End Turn" onAction="#endTurn" prefWidth="80" prefHeight="25" style="-fx-font-size: 10px;" />
                <Button fx:id="loopButton" text="LOOP" onAction="#performLoop" prefWidth="60" prefHeight="25" style="-fx-font-size: 10px;" />
            </HBox>

            <!-- COMPACT MISSION DISPLAY -->
            <VBox spacing="3" prefHeight="35">
                <Label text="Missions" styleClass="panel-title" style="-fx-font-size: 10px;" />
                <ListView fx:id="missionsList" prefHeight="25" style="-fx-font-size: 8px;" />
            </VBox>
        </VBox>
    </bottom>

    <!-- COMPACT RIGHT PANEL -->
    <right>
        <VBox spacing="5" styleClass="side-panel" prefWidth="100">
            <Button text="Save" onAction="#saveGame" prefHeight="20" style="-fx-font-size: 9px;" />
            <Button text="Load" onAction="#loadGame" prefHeight="20" style="-fx-font-size: 9px;" />
            <Button text="New" onAction="#newGame" prefHeight="20" style="-fx-font-size: 9px;" />
        </VBox>
    </right>

</BorderPane>